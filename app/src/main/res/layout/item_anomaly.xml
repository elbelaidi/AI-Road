<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sessionDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-05-20"
                android:textSize="14sp"
                android:textColor="#444"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sessionNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Session A"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/impactTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Impact: Hard"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:background="@drawable/rounded_bg"
                android:textColor="@color/red_900" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/mapThumbnail"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:background="@drawable/thumbnail_border"
                android:src="@drawable/map_icon"
                android:contentDescription="Map Thumbnail" />

            <TextView
                android:id="@+id/tapToMapText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to view map"
                android:textSize="12sp"
                android:textColor="@color/blue_700"
                android:paddingTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
